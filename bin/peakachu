#!/usr/bin/env python3

"""Peak calling tool for CLIP-seq data"""

import argparse
import peakachulib

__author__ = "Thorsten Bischler"
__copyright__ = "2015 by Thorsten Bischler <thorsten.bischler@uni-wuerzburg.de>"
__license__ = "ISC license"
__email__ = "thorsten.bischler@uni-wuerzburg.de"
__version__ = "0.1dev"

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "--version", "-v", default=False, action="store_true",
        help="show version")
    subparsers = parser.add_subparsers(help="commands")

    # Arguments for peak definition
    define_peaks_parser = subparsers.add_parser(
        "define_peaks", help="Define peaks")
    define_peaks_parser.set_defaults(func=define_peaks)
    define_peaks_parser.add_argument("input_file")

    args = parser.parse_args()
    if args.version is True:
                print("PEAKachu version " + __version__)
    elif "func" in dir(args):
        args.func()
    else:
                parser.print_help()

def define_peaks():
    print("- Define peaks")

main()
